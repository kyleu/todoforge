root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 160

[*.go]
indent_style = tab
tab_width = 2

[*.html]
indent_style = space
indent_size = 2

[*.md]
indent_style = space
indent_size = 2

[*.sql]
indent_style = space
indent_size = 2

[*.{ts,tsx}]
indent_style = space
indent_size = 2
